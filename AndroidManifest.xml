<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.travelreminder.android22" android:versionCode="1"
	android:versionName="1.0">
	<application android:icon="@drawable/icon" android:theme="@android:style/Theme.NoTitleBar">
		<activity android:label="@string/app_name" android:name=".TravelReminder">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".Views.MapTabView" android:label="@string/str_mapview_name">
			<intent-filter>
				<category android:name="android.intent.category.EMBED"></category>
				<action android:name="android.intent.action.MAIN"></action>
			</intent-filter>
		</activity>
		<activity android:label="Actions" android:name=".Views.UserActionView">
		</activity>
		<activity android:label="Add Step" android:name=".Views.AddStepView">
		</activity>
		<activity android:label="Credits" android:name=".Views.CreditsView">
		</activity>
		<uses-library android:name="com.google.android.maps" />
	</application>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-sdk android:minSdkVersion="8" />
</manifest> 

